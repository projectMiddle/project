    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "ProjectApplication (local profile)",
            "request": "launch",
            "mainClass": "com.example.project.ProjectApplication",
            "projectName": "project",
            "args": "--spring.profiles.active=local"
        },
        {
            "type": "java",
            "name": "ProjectApplication (prod profile)",
            "request": "launch",
            "mainClass": "com.example.project.ProjectApplication",
            "projectName": "project",
            "args": "--spring.profiles.active=prod"
        }
    ]
}